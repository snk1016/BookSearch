<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="item"
            type="com.example.test.librarysearch.model.response.Documents" />
        <variable
            name="position"
            type="Integer" />
        <variable
            name="listener"
            type="com.example.test.librarysearch.ui.home.HomeAdapter.OnItemClickListener" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10.00dp"
        android:paddingLeft="10.00dp"
        android:paddingRight="10.00dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5.00dp"
            android:onClick="@{(view) -> listener.setOnItemClickListener(view, item, position)}">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingRight="5.00dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="80.00dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    app:setImageLoader="@{item.thumbnail}"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="5.00dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txtBookItemTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@{item.title}"
                        android:textColor="#333333"
                        android:textSize="18sp"
                        android:typeface="sans"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/txt_gray_13"
                            android:text="@string/txt_author"
                            tools:text="@string/txt_author"/>
                        <TextView
                            android:id="@+id/txtBookItemAuthor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/txt_gray_13"
                            android:text="@{item.allAuthor}"
                            tools:text="작가명"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/txt_gray_13"
                            android:text="@string/txt_publisher"
                            tools:text="@string/txt_publisher"/>
                        <TextView
                            android:id="@+id/txtBookItemPublisher"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/txt_gray_13"
                            android:text="@{@string/valid_publisher(item.publisher, item.datetimeFormat)}"
                            tools:text="출판사명"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txtBookItemPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/txtPrice"
                            android:text="@{item.unitPrice}"
                            tools:text="1,000,000"/>
                        <TextView
                            android:id="@+id/txtBookItemSalePrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/txtPriceSale"
                            android:visibility="gone"
                            android:text="@{item.unitSalePrice}"
                            tools:text="(900,000)"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="10.00dp"
                    android:paddingBottom="15.00dp"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:layout_width="30.00dp"
                        android:layout_height="30.00dp"
                        android:adjustViewBounds="true"
                        android:background="@drawable/icon_arrow"/>
                    <View
                        android:layout_width="1.00dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"/>
                    <ImageView
                        android:id="@+id/imgLike"
                        android:layout_width="15.00dp"
                        android:layout_height="15.00dp"
                        android:layout_gravity="bottom|center"
                        android:adjustViewBounds="true"
                        android:background="@drawable/icon_heart_off"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>